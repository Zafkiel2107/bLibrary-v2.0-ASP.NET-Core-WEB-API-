@using bLibraryAPI.Models.Identity
@model LoginModel

@{
    ViewData["Title"] = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Вход</h1>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Email)
                @Html.EditorFor(model => model.Email, new { type = "email" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                @Html.EditorFor(model => model.Password, new { type = "password" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Еще не зарегистрированы?", "Register", "Account")
</div>
<div>
    @Html.ActionLink("Забыли пароль?", "ForgotPassword", "Account")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
