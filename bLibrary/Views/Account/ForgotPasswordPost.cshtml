@using bLibraryAPI.Models.Identity
@model ForgotPasswordPostModel

@{
    ViewData["Title"] = "Смена пароля";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Смена пароля</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("ForgotPasswordPost", "Account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                @Html.EditorFor(model => model.Password, new { type = "email" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword)
                @Html.EditorFor(model => model.ConfirmPassword, new { type = "password" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
            <div class="form-group">
                <input type="submit" value="Сменить пароль" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Вернуться на начальную страницу", "Main", "Home")
</div>

