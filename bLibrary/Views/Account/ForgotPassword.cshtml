@using bLibraryAPI.Models.Identity
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Подтверждание смены пароля";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подтверждание смены пароля</h1>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.CurrentEmail)
                @Html.EditorFor(model => model.CurrentEmail, new { type = "email" })
                @Html.ValidationMessageFor(model => model.CurrentEmail)
            </div>
            <div class="form-group">
                <input type="submit" value="Подтвердить" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Вернуться на начальную страницу", "Main", "Home")
</div>